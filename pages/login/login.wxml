<view class="container">
  <view class="wechatapp">
    <!-- <image class="header" src="/images/wechatapp.png"></image> -->
    <view class="header">
      <open-data class="" type="userAvatarUrl"></open-data>
    </view>
  </view>
  <view class="welcome">欢迎使用校园智能考勤查询系统</view>
  <!-- <view class="auth-subtitle">获得你的公开信息（昵称、头像等）</view> -->
  <form>
    <view class='title mt-40'>请先申请通过微信服务消息收发访客预约通知的权限</view>
    <picker range="{{Role_array}}" bindchange="bindRolePickerChange">
      <view class="picker">
        <label class='label'>选择身份</label><text class='text'>{{Role_array[Role_index]}}</text>
      </view>
    </picker>
    <van-field label="登记手机号" maxlength="{{maxlengthPhone}}" placeholder="家长手机号" clearable border="{{ false }}" bindinput="getPhoneInput"/>
    <view class='flag'>务必填写与孩子身份绑定的家长手机号</view>
  </form>
  <button class="login-btn mt-40" openType="getUserInfo" lang="zh_CN" bindgetuserinfo="authorLogin">确认申请</button>
</view>
