/* 搜索框组件 */
/* @import "components/search/search.wxss"; */

.form{
  width: 100%;
  height: auto;
  font-size: 14px;
}
.item{
  color: #646464;
}
.picker2 .text_box{
  display: flex;
  width: 108px;
  margin-left: 50%;
  transform: translateX(-50%);
}
.picker2 .text_box .time{
  flex: 1;
  text-align: right;
  color: #228B22;
}
.picker2 .text_box .icon{
  flex: 0 0 20px;
  text-align: left;
  padding-top: 6rpx;
  padding-left: 6rpx;
}

.item2{background-color: white;font-size: 14px;margin-top: 2px;padding: 10px 12px;}

.statistics{
  display: flex;
}
.statistics label{
  flex: 1;
  font-size: 32rpx;
  text-align: center;
}

.color .clickable{
  color: rgb(14, 200, 233);
  text-decoration: underline;
}

